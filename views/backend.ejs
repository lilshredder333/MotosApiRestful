<h1 style="margin-top: 150px">New Motorbike</h1>
<form
  class="form add-motorbike"
  action="/motorbikes"
  method="POST"
  enctype="multipart/form-data"
>
  <div class="pretty-form">
    <label for="brand">Brand:</label>
    <input type="text" id="brand" name="brand" /><br />
  </div>
  <div class="pretty-form">
    <label for="brand">Model:</label>
    <input type="text" id="model" name="model" /><br />
  </div>

  <div class="pretty-form">
    <label for="brand">Year:</label>
    <input type="text" id="year" name="year" /><br />
  </div>

  <div class="pretty-form">
    <label for="brand">Engine Type:</label>
    <input type="text" id="engineType" name="engineType" /><br />
  </div>

  <div class="pretty-form">
    <label for="brand">Horse Power:</label>
    <input type="text" id="horsepower" name="horsepower" /><br />
  </div>

  <div class="pretty-form">
    <label for="brand">Torque:</label>
    <input type="text" id="torque" name="torque" /><br />
  </div>
  <div class="pretty-form">
    <label for="brand">Weight:</label>
    <input type="text" id="weight" name="weight" /><br />
  </div>

  <div class="pretty-form">
    <label for="brand">Top Speed:</label>
    <input type="text" id="topSpeed" name="topSpeed" /><br />
  </div>

  <div class="pretty-form">
    <label for="brand">Color:</label>
    <input type="text" id="color" name="color" /><br />
  </div>

  <div class="pretty-form">
    <label for="brand">Price:</label>
    <input type="text" id="price" name="price" /><br />
  </div>

  <div class="pretty-form">
    <label for="images">Images:</label>
    <input
      type="file"
      id="images"
      name="images"
      class="images"
      multiple
    /><br />
  </div>

  <button type="submit" class="submit-btn">Create</button>
</form>
<div class="form-container">
  <% if (motorbikes.length > 0) { %> <% motorbikes.forEach(motorbike => { %>

  <div class="form">
    <form
      action="/motorbikes/<%= motorbike._id %>?_method=PUT"
      method="POST"
      enctype="multipart/form-data"
    >
      <label for="brand">Brand:</label>
      <input
        type="text"
        id="brand"
        name="brand"
        value="<%= motorbike.brand %>"
      /><br />
      <label for="brand">Model:</label>
      <input
        type="text"
        id="model"
        name="model"
        value="<%= motorbike.model %>"
      /><br />
      <label for="brand">Year:</label>
      <input
        type="text"
        id="year"
        name="year"
        value="<%= motorbike.year %>"
      /><br />
      <label for="brand">Engine Type:</label>
      <input
        type="text"
        id="engineType"
        name="engineType"
        value="<%= motorbike.engineType %>"
      /><br />
      <label for="brand">Horse Power:</label>
      <input
        type="text"
        id="horsepower"
        name="horsepower"
        value="<%= motorbike.horsepower %>"
      /><br />
      <label for="brand">Torque:</label>
      <input
        type="text"
        id="torque"
        name="torque"
        value="<%= motorbike.torque %>"
      /><br />
      <label for="brand">Weight:</label>
      <input
        type="text"
        id="weight"
        name="weight"
        value="<%= motorbike.weight %>"
      /><br />
      <label for="brand">Top Speed:</label>
      <input
        type="text"
        id="topSpeed"
        name="topSpeed"
        value="<%= motorbike.topSpeed %>"
      /><br />
      <label for="brand">Color:</label>
      <input
        type="text"
        id="color"
        name="color"
        value="<%= motorbike.color %>"
      /><br />
      <label for="brand">Price:</label>
      <input
        type="text"
        id="price"
        name="price"
        value="<%= motorbike.price %>"
      /><br />
      <label for="images">Current Images:</label>
      <div id="current-images">
        <% motorbike.images.forEach(image => { %>
          <img src="/images/<%= image %>" alt="Motorbike Image" width="100" />
        <% }); %>
      </div>
      <label for="new-images">Upload New Images (if any):</label>
      <input type="file" id="new-images" name="images" multiple /><br />
      <button type="submit">Update</button>
    </form>
    <form
      class="delete-form"
      action="/motorbikes/<%= motorbike._id %>?_method=DELETE"
      method="POST"
      style="display: inline"
    >
      <button type="submit">Delete</button>
    </form>
  </div>
  <% }); %> <% } else { %>
  <p>No motorbikes found.</p>
  <% } %>
</div>
